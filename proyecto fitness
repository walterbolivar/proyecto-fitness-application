void aumento_muscular(){
int op;
cout<<"esta es una dieta que es mas densa en calorias y que por tanto te dara una sobreabundancia de calorias"; 
cout<<" con el proposito de ayudarte agenerar un tejido muscular magro\n";
cout<<" 1.-Alimentacion \n";
cout<<" 2.-rutina \n";
cin>> op;
switch(op){
case 1:cout<<"semana lunes a viernes .- \n";
	cout<<" ...............desayuno.....................:\n";
	cout<<" 5 claras de huevo, una taza de avena \n";
	cout<<"................Media manhana.................:\n";
	cout<<"una batido de avena con guineo \n";
	cout<<"................almuerzo........................:\n";
	cout<<"un filete de pollo de 250 gramos a la planca, una porcion de arroz o papa hervidas con enzalada \n ";
	cout<<" ...............merienda...........................:\n";
	cout<<"una empanada integral\n ";
    cout<<"...............cena..................................:\n";
	cout<<"pechuga de pollo con una porcion de arroz y ensalada";
		break;

case 2:cout<<"rutina de ejercicio lunes a viernes/n";
	cout<<" ..................lunes.....................:\n";
	cout<<"pecho y bicep cada musculo duracion de 45 minutos ,cada ejercicio hacerlo con el maximo peso que pueda levantar\n";
	cout<<"..................martes........................:\n";
	cout<<"espalda y treicep cada musculo duracion de 45 minutos,incrementar de peso en cada serie\n";
	cout<<"..................miercoles.........................:\n";
	cout<<"hombre y piernas cada musculo duracion de 45 minutos \n ";
	cout<<".................jueves................................:\n";
	cout<<"pecho (todo con peso muerto) y bicep(peso muerto) cada musculo duracion de 45 minutos\n ";
    cout<<"................ viernes................................:\n";
	cout<<"espalda (peso muerto y tricep(poleas)\n";
	     break;


}
}
