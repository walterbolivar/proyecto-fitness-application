switch(op){

case 1: definicion_muscular();break;
case 2: aumento_muscular();break;
case 3:	adelgazamiento();break;
case 4: cout<<"chau \n";
default : cout<<"digite opcion correcta \n";}
}while(op!=0);


getch();
}


