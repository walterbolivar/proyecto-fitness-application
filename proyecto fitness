void main(){

int op;
do{cout<<"                        MENU"<<endl;
cout<<"                        ----"<<endl;
cout<<"1.-Definicion muscular"<<endl;
cout<<"2.-Aumento muscular"<<endl;
cout<<"3.-Adelgazamiento"<<endl;
